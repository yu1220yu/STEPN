@{
    ViewData["Title"] = "Casa";
    Layout = "~/Views/Shared/_CasaLayout.cshtml";
}

@section topCSS{
    <style>
        body::-webkit-scrollbar {
            display: none;
        }
    </style>
}

    <!-- content -->
    <section class="position-relative d-flex justify-content-center">
        <img src="https://stepn.io/img/page1/background.png" class="w-75">
        <img src="https://stepn.io/img/page1/valley.png"
         class="col-12 position-absolute end-0 bottom-0 translate-middle-y">
        <img src=" https://stepn.io/img/page1/river.png"
         class="col-12 position-absolute end-0 bottom-0 translate-middle-y">
        <img src="https://stepn.io/img/page1/hill.png" class="col-12 position-absolute end-0 bottom-0">
        <img src="https://stepn.io/img/page1/people.png" class="col-12 position-absolute end-0 bottom-0">
    </section>

    <section class="container d-flex flex-wrap justify-content-center py-5">
        <h2 class="col-10 text-white py-5 text-center display-2 fw-bold text-nowrap w-100">JOIN NOW & <br> MAKE YOUR NFT!</h2>
        <img src="https://stepn.io/img/page2/shoes.svg" class="col-6">
    </section>

    <section class="position-relative py-5">
        <img src="https://stepn.io/img/page4-5-background.png" class="col-12">
        <span class="position-absolute bottom-50 end-0 bg-dark text-white text-center fw-bold display-5 w-100">
            自由交易 NFT の大平台
        </span>
    </section>

    <img src="https://stepn.io/img/page4/background.png" class="col-12" style="transform:translateY(-6rem);margin-bottom:-5rem;">
    <section class="d-flex flex-column align-items-center" style="transform:translateY(-6rem);margin-bottom:-5rem;">
        <span class="bg-dark text-white rounded-pill fw-bolder fs-1 py-2 px-4">THE TEAM</span>
        <div class="d-flex">
            <img src="https://stepn.io/img/page4/left-arrow.svg">
            <div class="card bg-transparent border-0">
                <img src="https://imgur.dcard.tw/zraPtCz.gif" class="card-img-top" />
                <div class="card-body d-flex flex-column text-white text-center fw-semibold" style="transform:translateY(-2rem)">
                    <span class="fs-3 badge bg-secondary bg-opacity-25">JI</span>
                </div>
            </div>
            <div class="card bg-transparent border-0">
                <img src="https://4.bp.blogspot.com/-0UDHGNRZ1Ig/WDfsnp5eT-I/AAAAAAAD1CI/AODhxcbk3SYhFDTUQMf3pG_cICTFV4nUgCLcB/s1600/AS001056_06.gif" class="card-img-top" />
                <div class="card-body d-flex flex-column text-white text-center fw-semibold" style="transform:translateY(-2rem)">
                    <span class="fs-3 badge bg-secondary bg-opacity-25">YU</span>
                </div>
            </div>
            <img src="https://stepn.io/img/page4/right-arrow.svg">
        </div>
    </section>

    <section class="d-flex justify-content-center">
        <img src="https://stepn.io/img/page9/roadmap.svg" class="col-12 mt-5 py-4 position-absolute">
        <img src="https://stepn.io/img/page7-8-background.png" class="col-12 pb-5 opacity-25">
    </section>

    <section class="d-flex justify-content-center position-relative">
        <!-- Email -->
        <div class="container mt-5 pt-5 position-absolute top-50 ">
            <div class="row d-flex justify-content-center">
                <div class="col-md-5 col-12 form-outline form-white mb-3">
                        <input type="email" class="form-control text-center" placeholder="EMAIL" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-outline-light bg-dark border-0 fw-bold">
                        Subscribe
                    </button>
                </div>
            </div>
        </div>
        <img src="https://stepn.io/img/page10/background.png" class="col-10">
    </section>

    <!-- link -->
    <section class="text-center text-white pt-2">
        <!-- discord -->
        <a class="btn btn-floating text-white border-0 m-1" href="#!" role="button">
            <i class="fa-brands fa-discord"></i>
        </a>
        <!-- telegram -->
        <a class="btn btn-floating text-white border-0 m-1" href="#!" role="button">
            <i class="fa-brands fa-telegram"></i>
        </a>
        <!-- Twitter -->
        <a class="btn btn-floating text-white border-0 m-1" href="#!" role="button">
            <i class="fab fa-twitter"></i>
        </a>
        <!-- reddit -->
        <a class="btn btn-floating text-white border-0 m-1" href="#!" role="button">
            <i class="fa-brands fa-reddit"></i>
        </a>
        <!-- youtube -->
        <a class="btn btn-floating text-white border-0 m-1" href="#!" role="button">
            <i class="fa-brands fa-youtube"></i>
        </a>
        <!-- medium -->
        <a class="btn btn-floating text-white border-0 m-1" href="#!" role="button">
            <i class="fa-brands fa-medium"></i>
        </a>
    </section>
